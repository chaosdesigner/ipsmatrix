  <% if session[:query] === [] %>
    <img id="no-results" src="/images/stop-icon-13421.png">
  <% else %>
    <table>
      <tr>
        <% @entities.each do |entity| %>
          <% if (entity.seq == 1) %>
            <% if session[:query].include? "#{entity.id}_2" %>
              <td><img id="img_<%= entity.id %>" class="thumbnail" src="images/<%= entity.name.gsub(' ', '_').downcase %>.jpg" /></td>
            <% end %>
            <% if session[:query].include? "#{entity.id}_3" %>
              <td><img id="img_<%= entity.id %>" class="thumbnail" src="images/<%= entity.name.gsub(' ', '_').downcase %>.jpg" /></td>
            <% end %>
          <% else %>
            <% if session[:query].include? "#{entity.id}_1" %>
              <td><img id="img_<%= entity.id %>" class="thumbnail" src="images/<%= entity.name.gsub(' ', '_').downcase %>.jpg" /></td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
      <tr>
        <% @entities.each do |entity| %>
          <% if (entity.seq == 1) %>
            <% if session[:query].include? "#{entity.id}_2" %>
              <td><%= entity.name %> - <%= @sexes[2].send(@desc_attribute) %></td>
            <% end %>
            <% if session[:query].include? "#{entity.id}_3" %>
              <td><%= entity.name %> - <%= @sexes[1].send(@desc_attribute) %></td>
            <% end %>
          <% else %>
          <% if session[:query].include? "#{entity.id}_1" %>
              <td><%= entity.name %></td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    </table>
  <% end %>

