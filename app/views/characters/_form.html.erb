<%= form_with(model: character) do |form| %>
  <% if character.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
        <% character.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :feature_id, style: "display: block" %>
    <%= form.collection_select :feature_id, Feature.all, :id, :name_cz %>
  </div>

  <div>
    <%= form.label :feature_type_id, style: "display: block" %>
    <%= form.collection_select :feature_type_id, FeatureType.all, :id, :description %>
  </div>

  <div>
    <%= form.label :description_en, style: "display: block" %>
    <%= form.text_field :description_en %>
  </div>

  <div>
    <%= form.label :description_cz, style: "display: block" %>
    <%= form.text_field :description_cz %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
